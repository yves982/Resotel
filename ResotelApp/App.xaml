<Application x:Class="ResotelApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ResotelApp">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <LinearGradientBrush x:Key="BgBrush" StartPoint="1,0" EndPoint="1,1">
                        <GradientStop Offset="0.25" Color="#dbdbdb"></GradientStop>
                        <GradientStop Offset="0.50" Color="#dbdbdb"></GradientStop>
                        <GradientStop Offset="0.75" Color="#d1d1d1"></GradientStop>
                        <GradientStop Offset="1" Color="#efefef"></GradientStop>
                    </LinearGradientBrush>
                </ResourceDictionary>
                <ResourceDictionary Source="/Views/Styles/CustomTheme.xaml"></ResourceDictionary>
                <ResourceDictionary Source="/Views/Styles/ShinyDarkTeal/Theme.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
