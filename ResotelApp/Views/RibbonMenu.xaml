<UserControl x:Class="ResotelApp.Views.RibbonMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ResotelApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary Source="RibbonAppMenuStyle.xaml" />
    </UserControl.Resources>
    <Grid>
        <Ribbon x:Name="AppRibbon" IsMinimized="True">
            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu x:Name="AppMenu" Label="AppMenu" KeyTip="F">
                    <RibbonApplicationMenuItem Header="_Fichier" />
                    <RibbonApplicationMenuItem Header="_Edition" />
                    <RibbonApplicationSplitMenuItem Header="_Aide" >
                        <RibbonApplicationMenuItem Header="A _Propos" Command="{Binding AboutCommand}" />
                    </RibbonApplicationSplitMenuItem>
                </RibbonApplicationMenu>
            </Ribbon.ApplicationMenu>
        </Ribbon>
    </Grid>
</UserControl>
